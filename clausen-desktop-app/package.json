{
  "name": "clausen-desktop",
  "version": "1.1.0",
  "type": "module",
  "description": "Clausen School Management System - Desktop Application",
  "main": "dist-vite/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "preview": "vite preview"
  },
  "keywords": [
    "clausen",
    "school",
    "management",
    "education",
    "electron"
  ],
  "author": "Clausen Technologies",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.2",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5"
  },
  "build": {
    "appId": "com.clausen.desktop",
    "productName": "Clausen",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "NiklausJoelBJunior",
        "repo": "Clausen_technologies"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/LOGO WITH NO BACKGROUND.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/LOGO WITH NO BACKGROUND.png",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/LOGO WITH NO BACKGROUND.png",
      "category": "Education"
    }
  }
}
